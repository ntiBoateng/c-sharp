@model Product

<form method="post">
	<div class="border p-3 mt-4 ">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row">
			<label class="mb-2 fw-bold">Product Name</label>
			<input asp-for="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger pt-1"></span>
		</div>
		<div class="mb-3 row">
			<label class="mb-2">Description</label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger pt-1"></span>
		</div>
		<div class="mb-3 row">
			<label class="mb-2">ISBN</label>
			<input asp-for="ISBN" class="form-control" />
			<span asp-validation-for="ISBN" class="text-danger pt-1"></span>
		</div>
		<div class="mb-3 row">
			<label class="mb-2">Author Name</label>
			<input asp-for="AuthurName" class="form-control" />
			<span asp-validation-for="AuthurName" class="text-danger pt-1"></span>
		</div>
		<div class="mb-3 row">
			<label class="mb-2">List Price</label>
			<input asp-for="ListPrice" class="form-control" />
			<span asp-validation-for="ListPrice" class="text-danger pt-1"></span>
		</div>
		<div class="mb-3 row">
			<label class="mb-2">Price</label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger pt-1"></span>
		</div>
		<div class="mb-3 row">
			<label class="mb-2">Price 50</label>
			<input asp-for="Price50" class="form-control" />
			<span asp-validation-for="Price50" class="text-danger pt-1"></span>
		</div>
		<div class="mb-3 row">
			<label class="mb-2">Price 100</label>
			<input asp-for="Price100" class="form-control" />
			<span asp-validation-for="Price100" class="text-danger pt-1"></span>
		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-primary form-control">Update</button>
			</div>
			<div class="col-6">
				<a class="btn btn-secondary border form-control" asp-controller="Category" asp-action="Index">Back to List</a>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}