@model Category

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2"> Create Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body">
		<form method="post">
			<div class="border p-3 mt-4 ">
				<div class="row pb-2">
					
					
				</div>
				<div asp-validation-summary="All"></div>
				<div class="mb-3 row">
					<label class="mb-2 fw-bold">Category Name</label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger pt-1"></span>
				</div>
				<div class="mb-3 row">
					<label class="mb-2">Display Order</label>
					<input asp-for="DisplayOrder" class="form-control" />
					<span asp-validation-for="DisplayOrder" class="text-danger pt-1"></span>
				</div>
				<div class="row">
					<div class="col-6">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6">
						<a class="btn btn-outline-primary border form-control" asp-controller="Category" asp-action="Index">Back to List</a>
					</div>
				</div>
			</div>
		</form>

	</div>
</div>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}